		"target": "es5",
    "module": "commonjs",
		"noImplicitAny": false, //would be nice to enable this...
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "dist/typings",
